<?xml version="1.0" encoding="utf-8"?>
<MotionScene xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <Transition
        app:constraintSetEnd="@id/collapsed"
        app:constraintSetStart="@id/expanded"
        app:motionInterpolator="linear">

        <OnSwipe
            app:dragDirection="dragUp"
            app:touchAnchorId="@id/toolbarBg"
            app:touchAnchorSide="bottom"
            app:touchRegionId="@id/scrollView" />

        <KeyFrameSet>
            <KeyAttribute
                android:scaleY="0.0"
                app:framePosition="0"
                app:motionTarget="@id/toolbarShadow" />
            <KeyAttribute
                android:scaleY="0.0"
                app:framePosition="95"
                app:motionTarget="@id/toolbarShadow" />
            <KeyAttribute
                android:scaleY="1"
                app:framePosition="100"
                app:motionTarget="@id/toolbarShadow" />
        </KeyFrameSet>

    </Transition>

    <ConstraintSet android:id="@+id/expanded">
        <Constraint
            android:id="@id/toolbarBg"
            android:layout_width="0dp"
            android:layout_height="220dp"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </ConstraintSet>

    <ConstraintSet android:id="@+id/collapsed">
        <Constraint
            android:id="@id/toolbarBg"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Constraint
            android:id="@id/appIcon"
            android:layout_width="28dp"
            android:layout_height="?actionBarSize"
            android:layout_marginStart="16dp"
            android:src="@mipmap/ic_launcher"
            app:layout_constraintBottom_toBottomOf="@id/toolbarBg"
            app:layout_constraintStart_toEndOf="@id/startGuideline" />

        <Constraint
            android:id="@id/appName"
            android:layout_width="wrap_content"
            android:layout_height="?actionBarSize"
            android:scaleX="0.6"
            android:scaleY="0.6"
            android:translationX="-42dp"
            app:layout_constraintBottom_toBottomOf="@id/toolbarBg"
            app:layout_constraintStart_toEndOf="@id/appIcon" />
    </ConstraintSet>

</MotionScene>